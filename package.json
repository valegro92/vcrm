{
  "name": "vaib",
  "version": "2.0.0",
  "description": "VAIB - Il CRM che si adatta parlandoci. Per freelancer e partite IVA forfettarie.",
  "private": true,
  "keywords": ["crm", "freelancer", "forfettario", "ai", "react", "nodejs"],
  "author": "VAIB Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/valegro92/vcrm.git"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.30.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.2",
    "react-scripts": "5.0.1",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "npm run start:prod",
    "dev": "concurrently \"npm run server:dev\" \"react-scripts start\"",
    "build": "cd server && npm install && cd .. && react-scripts build",
    "build:prod": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "server:init": "cd server && npm run init-db",
    "install:server": "cd server && npm install",
    "start:prod": "NODE_ENV=production cd server && node server.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "proxy": "http://localhost:8080",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}